<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="school_branch_list" model="ir.ui.view">
            <field name="name">school.branch.list</field>
            <field name="model">school.branch</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="city_id"/>
                    <field name="country_id"/>
                    <field name="school_id" widget="many2one_list"/>
                    <field name="working_type"/>
                    <field name="academic_years"/>
                    <field name="visible_field"/>
                </list>
            </field>

        </record>



        <record id="school_branch_form" model="ir.ui.view">
            <field name="name">school.branch.form</field>
            <field name="model">school.branch</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_add_my_branch_tags"
                                    type="object"
                                    string="Add Tags (my branch)"
                                    class="oe_highlight"/>

                        <button name="action_add_supervisors"
                                type="object"
                                string="Add supervisors"
                                class="oe_highlight"/>
                        <button name="action_remove_supervisors"
                                type="object"
                                string="remove supervisors"
                                class="oe_highlight"/>

                        <button name="action_change_state_to_active"
                                    type="object"
                                    string="Active"
                                    invisible="state != 'draft'"
                                    statusbar_visible="draft,active"
                                    class="oe_highlight"/>

                            <button name="action_action_open_close_wizard"
                                   type="object"
                                    string="Closed"
                                    context="{'default_branch_id': id}"
                                    invisible="state != 'active'"
                                    class="oe_highlight"/>

                            <button name="action_action_open_close_wizard"
                                type="object"
                                string="Re_open"
                                context="{'default_branch_id': id}"
                                invisible="state != 'closed'"
                                class="oe_highlight"/>


                            <button string="Back to draft" type="object"
                                    name="action_change_state_to_draft"
                                    statusbar_visible="active,closed"
                                    class="oe_highlight"/>
                              <field name="state" widget="statusbar" statusbar_visible="draft,active,closed" nolabel="1" options="{'clickable': '1'}"
                            />
                    </header>


                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="visible_field" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="user_id" readonly="1"/>
<!--                            <field name="closing_reason" invisible="state != 'closed'"/>-->

                        </group>
                        <group>
                            <field name="city_id"/>
                            <field name="country_id"/>
                        </group>
                        <group>
                            <field name="school_id"/>
                        </group>
                        <group>
                            <field name="working_type" />
                        </group>

                        <notebook>
                            <page string="Academic Year">
                                <group>
                                    <field name="academic_years" invisible="working_type != 'working'"/>
                                </group>
                            </page>
                            <page string="Branch Closing History Log" invisible="visible_field == False">
                                <group>
                                    <field name="branch_history" >
                                        <list>
                                            <field name="created_by"/>
                                            <field name="date"/>
                                            <field name="close_branch_reason"  />
                                            <field name="open_branch_reason" />
                                        </list>
                                    </field>
                                </group>
                            </page>
                            <page  string="Branch Supervisors">
                                <group>
                                    <field name="supervisors_ids">
                                        <list>
<!--                                            <field name="branch_id"/>-->
                                            <field name="user_id"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                            <page string="Tags">
                                <group>
                                    <field name="tags_ids" widget="many2many_tags"/>
                                </group>
                            </page>

                        </notebook>

                    </sheet>
                    <chatter/>

                </form>
            </field>
        </record>
        <record id="action_branch" model="ir.actions.act_window">
            <field name="name">Branches</field>
            <field name="res_model">school.branch</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_branch"
                  name="Branches"
                  parent="menu_school"
                  action="action_branch"/>
    </data>
</odoo>