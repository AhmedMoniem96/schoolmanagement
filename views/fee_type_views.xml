<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Overwrite the old list view by keeping the same ID -->
  <record id="view_fee_type_list" model="ir.ui.view">
    <field name="name">fee.type.tree</field> <!-- name label; not the xmlid -->
    <field name="model">fee.type</field>
    <field name="priority">99</field> <!-- ensure it wins -->
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="amount"/>
        <field name="school_item_type"/>
      </tree>
    </field>
  </record>

  <!-- Overwrite the old form -->
  <record id="view_fee_type_form" model="ir.ui.view">
    <field name="name">fee.type.form</field>
    <field name="model">fee.type</field>
    <field name="priority">99</field>
    <field name="arch" type="xml">
      <form string="Fee Type">
        <sheet>
          <group>
            <field name="name"/>
            <field name="amount"/>
            <field name="school_item_type"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fee_type" model="ir.actions.act_window">
    <field name="name">Fee Types</field>
    <field name="res_model">fee.type</field>
    <field name="view_mode">tree,form</field> <!-- Odoo 18 -->
    <field name="view_id" ref="view_fee_type_list"/> <!-- open with our overwritten view -->
  </record>

  <menuitem id="menu_fee_type" name="Fee Types"
            parent="menu_school" action="action_fee_type" sequence="20"/>
</odoo>
