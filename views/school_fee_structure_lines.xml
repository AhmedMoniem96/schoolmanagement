<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_fee_structure_lines_list" model="ir.ui.view">
      <field name="name">fee.structure.lines.list</field>
      <field name="model">fee.structure.lines</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="amount"/>
          <field name="school_fee_id"/>
        </list>
      </field>
    </record>

    <record id="view_fee_structure_lines_form" model="ir.ui.view">
      <field name="name">fee.structure.lines.form</field>
      <field name="model">fee.structure.lines</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="amount"/>
              <field name="amount"/>
              <field name="school_fee_id"/>
            </group>
          </sheet>
          <chatter/>
        </form>
      </field>
    </record>

    <record id="action_fee_structure_lines" model="ir.actions.act_window">
      <field name="name">Fee Structure Lines</field>
      <field name="res_model">fee.structure.lines</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fee_structure_lines"
              name="Fee Lines"
              parent="menu_school"
              action="action_fee_structure_lines"/>
  </data>
</odoo>
