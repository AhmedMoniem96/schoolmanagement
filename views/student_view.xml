<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="school_student_list" model="ir.ui.view">
            <field name="name">school.student.list</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="parent_id" />
<!--                    <field name="academic_year_ids" />-->
                    <field name="date_of_birth" />
                    <field name="grade"/>
                    <field name="national_id" />
                    <field name="student_code" />

                </list>
            </field>
        </record>


        <record id="school_student_form" model="ir.ui.view">
            <field name="name">school.student.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>

                        <group>
                             <field name="parent_id" />
                        </group>
                        <group>
<!--                             <field name="academic_year_ids" />-->
                        </group>
                         <group>
                             <field name="date_of_birth" />
                        </group>
                        <group>
                             <field name="national_id" />
                        </group>
                        <group>
                             <field name="student_code" />
                        </group>
                        <group>
                            <field name="grade"/>
                        </group>
                        <group string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="school_student_search_view" model="ir.ui.view">
  <field name="name">school.student.search.view</field>
  <field name="model">school.student</field>
  <field name="arch" type="xml">
    <search string="Search Students">
      <field name="name"/>
      <field name="class_id"/>
      <field name="student_code"/>


      <group expand="0" string="Group By">
        <filter string="Grade (Grade 1/Grade 2/Grade 3)" name="grade_levels"
                context="{'group_by': 'grade'}"/>
      </group>

      <searchpanel>
        <field name="grade" string="Grade" select="one"/>
      </searchpanel>
    </search>
  </field>
</record>


        <record id="action_school_student" model="ir.actions.act_window">
            <field name="name">School Student</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_school_student"
                  name="School Student"
                  parent="menu_school"
                  action="action_school_student"/>
    </data>
</odoo>