<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="school_enrollment_list" model="ir.ui.view">
      <field name="name">school.enrollment.list</field>
      <field name="model">school.enrollment</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="parent_id"/>
          <field name="student_id"/>
          <field name="semester_id"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <record id="school_enrollment_form" model="ir.ui.view">
      <field name="name">school.enrollment.form</field>
      <field name="model">school.enrollment</field>
      <field name="arch" type="xml">
        <form>
          <sheet>

            <header>
              <button name="action_from_draft_to_active"
                      type="object"
                      string="Activate"
                      class="oe_highlight"
                      invisible="state != 'draft'"/>
              <button name="action_to_confirm"
                      type="object"
                      string="Confirm"
                      class="oe_highlight"
                      invisible="state != 'draft'"/>
              <button name="action_to_draft"
                      type="object"
                      string="Back To Draft"
                      class="oe_highlight"
                      invisible="state == 'draft'"/>
              <button name="action_to_completed"
                      type="object"
                      string="Completed"
                      class="oe_highlight"
                      invisible="state != 'active'"/>
              <button name="action_to_cancelled"
                      type="object"
                      string="Cancelled"
                      class="oe_highlight"
                      invisible="state == 'cancelled'"/>
              <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,active,completed,cancelled"/>
            </header>

            <group>
              <field name="name" readonly="1"/>
            </group>

            <group>
              <field name="parent_id"/>
            </group>
            <group>
              <field name="student_id"/>
            </group>
            <group>
              <field name="semester_id"/>
            </group>
            <group>
                <field name="class_id"/>
            </group>
            <group>
              <field name="class_id"
                     context="{
                       'default_semester_id': semester_id,
                       'default_academic_year_id': academic_year_id
                     }"
                     domain="[
                       ('semester_id', '=', semester_id),
                       ('academic_year_id', '=', academic_year_id)
                     ]"/>
            </group>

          </sheet>
          <chatter/>
        </form>
      </field>
    </record>

    <record id="action_school_enrollment" model="ir.actions.act_window">
      <field name="name">School Enrollment</field>
      <field name="res_model">school.enrollment</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_enrollment"
              name="School Enrollment"
              parent="menu_school"
              action="action_school_enrollment"/>

  </data>
</odoo>
