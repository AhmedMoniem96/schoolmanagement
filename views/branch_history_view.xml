<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="school_branch_history_list" model="ir.ui.view">
            <field name="name">school.branch.history.list</field>
            <field name="model">school.branch.history</field>
            <field name="arch" type="xml">
                <list>
                    <field name="branch_id" widget="many2one_list"/>
                    <field name="created_by"/>
                    <field name="date"/>
                    <field name="close_branch_reason" />
                    <field name="open_branch_reason" />

                </list>
            </field>
        </record>



        <record id="school_branch_history_form" model="ir.ui.view">
            <field name="name">school.branch.history.form</field>
            <field name="model">school.branch.history</field>
            <field name="arch" type="xml">
                <form>


                    <sheet>
                        <group>
                            <field name="branch_id" widget="many2one_list"/>
                        </group>
                        <group>
                            <field name="created_by"/>
                        </group>
                        <group>
                           <field name="date"/>
                        </group>
                        <group>
                            <field name="close_branch_reason" />
                        </group>
                        <group>
                            <field name="open_branch_reason" />
                        </group>
                    </sheet>

                </form>
            </field>
        </record>
        <record id="action_history_branch" model="ir.actions.act_window">
            <field name="name">Branch Closing History</field>
            <field name="res_model">school.branch.history</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_school_branch_history"
                  name="Branch Closing History"
                  parent="menu_school"
                  action="action_history_branch"/>
    </data>
</odoo>