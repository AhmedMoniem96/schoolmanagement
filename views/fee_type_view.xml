<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_fee_type_list" model="ir.ui.view">
      <field name="name">fee.type.list</field>
      <field name="model">fee.type</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="amount"/>
        </list>
      </field>
    </record>

    <record id="view_fee_type_form" model="ir.ui.view">
      <field name="name">fee.type.form</field>
      <field name="model">fee.type</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="amount"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_fee_type" model="ir.actions.act_window">
      <field name="name">Fee Types</field>
      <field name="res_model">fee.type</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fee_type"
              name="Fee Types"
              parent="menu_school"
              action="action_fee_type"/>
  </data>
</odoo>
