<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_school_branch_tags_list" model="ir.ui.view">
      <field name="name">school.branch.tags.list</field>
      <field name="model">school.branch.tags</field>
      <field name="arch" type="xml">
        <list editable="bottom">
          <field name="branch_id"/>
          <field name="name"/>
          <field name="created_by" readonly="1"/>
          <field name="date"/>
        </list>
      </field>
    </record>

    <record id="view_school_branch_tags_form" model="ir.ui.view">
      <field name="name">school.branch.tags.form</field>
      <field name="model">school.branch.tags</field>
      <field name="arch" type="xml">
        <form string="Branch Tag">
          <sheet>
            <group>
              <field name="name"/>
              <field name="branch_id"/>
              <field name="created_by" readonly="1"/>
              <field name="date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_school_branch_tags" model="ir.actions.act_window">
      <field name="name">Branch Tags</field>
      <field name="res_model">school.branch.tags</field>
      <field name="view_mode">list,form</field>
      <field name="context">{}</field>
    </record>

    <menuitem id="menu_branch_school_tags"
              name="Branch Tags"
              parent="menu_school"
              action="action_school_branch_tags"
              sequence="20"/>
  </data>
</odoo>

