<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="academic_year_list" model="ir.ui.view">
            <field name="name">academic.year.list</field>
            <field name="model">academic.year</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
<!--                    <field name="branch_id" widget="many2many_tags"/>-->
                    <field name="branch_id" />
                </list>
            </field>
        </record>


        <record id="academic_year_form" model="ir.ui.view">
            <field name="name">academic.year.form</field>
            <field name="model">academic.year</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" placeholder="e.g. 2023/2024"/>
                        </group>
                        <group>
                            <field name="branch_id" />
                        </group>
                    </sheet>
                    <header>
                        <button name="action_add_followers"
                                type="object"
                                string="Add all above followers"
                                class="oe_highlight"/>
                    </header>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="action_academic_year" model="ir.actions.act_window">
            <field name="name">Academic Year</field>
            <field name="res_model">academic.year</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_academic_year"
                  name="Academic Year"
                  parent="menu_school"
                  action="action_academic_year"/>
    </data>
</odoo>