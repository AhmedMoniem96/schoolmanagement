<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="closed_reason_wizard_form" model="ir.ui.view">
            <field name="name">school.branch.closed.reason.wizard.form</field>
            <field name="model">school.branch.closed.reason.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                       <field name="branch_id" readonly="1"/>
                       <field name="current_state" readonly="1"/>
                    </group>
                    <group>
                        <field name="closing_reason" invisible="current_state == 'closed'"/>
                        <field name="opening_reason" invisible="current_state != 'closed'"/>

<!--                        <field name="closing_reason" invisible="checked_visible_field == True"/>-->
<!--                        <field name="opening_reason" invisible="checked_visible_field == False"/>-->
                    </group>
                     <footer>
                        <button string="Submit" name="action_confirm_closed_reason" type="object" class="btn-danger" />
                       <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="closed_reason_wizard_action" model="ir.actions.act_window">
            <field name="name">School Branch Closed Reason</field>
            <field name="res_model">school.branch.closed.reason.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
