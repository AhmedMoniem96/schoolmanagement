<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="school_groups_category" model="ir.module.category">
            <field name="name">School Management</field>
            <field name="description">School Management</field>
        </record>

        <!-- ladder -->
        <record id="group_teacher" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="school_groups_category"/>
        </record>

        <record id="group_student_affairs" model="res.groups">
            <field name="name">Student Affairs</field>
            <field name="implied_ids" eval="[(6,0,[ref('group_teacher')])]"/>
            <field name="category_id" ref="school_groups_category"/>
        </record>

        <record id="group_supervisor" model="res.groups">
            <field name="name">Supervisor</field>
            <field name="implied_ids" eval="[(6,0,[ref('group_student_affairs')])]"/>
            <field name="category_id" ref="school_groups_category"/>
        </record>

        <record id="group_head_teacher" model="res.groups">
            <field name="name">Head Teacher</field>
            <field name="implied_ids" eval="[(6,0,[ref('group_supervisor')])]"/>
            <field name="category_id" ref="school_groups_category"/>
        </record>

        <record id="group_owner" model="res.groups">
            <field name="name">School Owner</field>
            <field name="implied_ids" eval="[(6, 0, [ref('group_head_teacher')])]"/>
            <field name="category_id" ref="school_groups_category"/>
        </record>

        <record id="access_school_branch_teacher" model="ir.model.access">
            <field name="name">school.branch teacher</field>
            <field name="model_id" ref="model_school_branch"/>
            <field name="group_id" ref="group_teacher"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="access_school_branch_owner" model="ir.model.access">
            <field name="name">school.branch owner</field>
            <field name="model_id" ref="model_school_branch"/>
            <field name="group_id" ref="group_owner"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="rule_teacher_own_records" model="ir.rule">
            <field name="name">Teacher: Own Records Only</field>
            <field name="model_id" ref="model_school_branch"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_teacher'))]"/>
        </record>

    </data>
</odoo>